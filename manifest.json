{
  "manifest_version": 3,
  "name": "MindScribe",
  "version": "1.0.0",
  "description": "Your personal second brain - capture, organize, and rediscover web content with AI",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "sidePanel",
    "aiOriginTrial"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "dist/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "MindScribe"
  },
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["dist/*"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}